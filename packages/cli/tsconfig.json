{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node"],
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "**/node_modules/**/*"
  ],
  "include": [
    "./src/**/*"
  ]
}